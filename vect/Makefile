CC=c++
CPPFLAG=-Wall -Wextra -Werror -std=c++98
CPPFILES=$(shell find . -name '*.cpp')
HEADER=$(shell find . -name '*.cpp')
OBJS=$(CPPFILES:.cpp=.o)



NAME=vect

all:$(NAME)

%.o: %.cpp $(HEADER)
	$(CC) $(CPPFLAG) -c $< -o $@

$(NAME):$(OBJS)
	$(CC) $(CPPFLAG) $(OBJS) -o $(NAME)

clean:
	@rm -rf $(OBJS)

fclean: clean
	@rm -rf $(NAME)

re: fclean all


run: all clean
	@echo "\n\033[1;31mðŸš€ Running $(NAME)...\033[0m\n"
	@./$(NAME)
	@rm $(NAME)
	@echo "\n\033[1;32mâœ… Done! Enjoy!\033[0m\n"
